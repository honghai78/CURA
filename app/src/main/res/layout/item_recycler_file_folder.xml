<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3.3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"></LinearLayout>

        <TextView
            android:id="@+id/text_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="3.3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <com.example.haitran.cura.views.InternetImageView
            android:background="@color/colorPrimary"
            android:src="@drawable/thumbnail_default"
            android:id="@+id/image_folder_1"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <com.example.haitran.cura.views.InternetImageView
            android:scaleType="centerCrop"
            android:src="@drawable/thumbnail_default"
            android:id="@+id/image_folder_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.example.haitran.cura.views.InternetImageView
                android:scaleType="centerCrop"
                android:src="@drawable/thumbnail_default"
                android:id="@+id/image_folder_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:background="#66FF0000"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:id="@+id/text_image"
                android:layout_centerInParent="true"
                android:text="+"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>